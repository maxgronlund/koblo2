!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=iso-8859-1", "http-equiv" => "Content-Type"}/
    %title Koblo

    = javascript_include_tag 'jquery-1.4.2.min.js', 'jquery-ui-1.8.1.custom.min', 'soundmanager2', 'jquery.playable', 'uploadify/swfobject', 'uploadify/jquery.uploadify.v2.1.0.min', 'dropdown', 'application'
    = javascript_include_tag 'http://cdn.gigya.com/JS/socialize.js?apikey=2_Y82PzwJ_chSFImHXaIDJClnLyJzmk-VFOavSsaNTzl6m901s_NNxRAS0xJ3bd3_N'
    %script
      $.playable('/swf/');
      $(function(){
      $('a[href$=.mp3]').playable();
      });

    %style{:media => "screen", :type => "text/css"}
      @import url("/stylesheets/layout.css");
    /[if IE] <link rel="stylesheet" type="text/css" href="stylesheets/ie.css">  %body
    #outer_layout
      #layout
        #header
          %a{:href => "#{user_signed_in? ? user_path(current_user) : '/'}"}
            %img.png{:alt => "", :src => "/images/logo.png"}/
          .right_sec
            %ul
              - if user_signed_in?
                %li
                  == Logged in as #{current_user.name}
              %li
                - if user_signed_in?
                  = link_to "Log out", destroy_user_session_path
                - else
                  %a{:href => "login.html", :id => 'login_link'} Log In
              %li
                %a{:href => "/pages/help"} Help
              %li
                %a{:href => "/pages/terms"} Terms
              %li
                %a{:href => "/pages/who"} Who
              %li
                %a{:href => '/pages/why'} Why
            %form{:action => '/'}
              %fieldset
                - unless user_signed_in?
                  %span
                    %a{:href => "#", :id => 'join_link'}
                      %img{:alt => "", :src => "/images/join.gif"}/
                %input.search{:name => "", :type => "submit", :value => ""}/
                .input_bg
                  %input{:name => "q", :type => "text"}/
        #main
          #main_top
            #banner_area
              %img{:alt => "", :src => "/images/banner01.jpg"}/
            #body_container
              #top_curve_main
                - if controller.class == PagesController || controller.class == UsersController || controller.class == ConnectionsController
                  = yield
                - else
                  = render :partial => 'shared/sidebar'
                  = render :partial => 'shared/main'
            #bottom_curve_main
            %span.clear
          = render :partial => 'shared/join'
                
        #main_bottom
        %span.clear

    :javascript
      $(document).ready(function() {
        #{yield :document_ready}
      });
