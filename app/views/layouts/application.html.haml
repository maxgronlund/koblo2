!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=iso-8859-1", "http-equiv" => "Content-Type"}/
    %title Koblo

    = javascript_include_tag 'jquery-1.4.2.min.js', 'soundmanager2', 'jquery.playable', 'dropdown', 'application'
    %script
      $.playable('/swf/');
      $(function(){
      $('a[href$=.mp3]').playable();
      });

    %style{:media => "screen", :type => "text/css"}
      @import url("/stylesheets/layout.css");
    /[if IE] <link rel="stylesheet" type="text/css" href="stylesheets/ie.css">  %body
    #outer_layout
      #layout
        #header
          %a{:href => '/'}
            %img.png{:alt => "", :src => "/images/logo.png"}/
          .right_sec
            %ul
              %li
                %a{:href => "login.html"} Login
              %li
                %a{:href => "/pages/help"} Help
              %li
                %a{:href => "/pages/terms"} Terms
              %li
                %a{:href => "/pages/who"} Who
              %li
                %a{:href => '/pages/why'} Why
            %form{:action => url_for(:controller => 'home', :action => 'index')}
              %fieldset
                %span
                  %a{:href => "#", :id => 'join_link'}
                    %img{:alt => "", :src => "/images/join.gif"}/
                %input.search{:name => "", :type => "submit", :value => ""}/
                .input_bg
                  %input{:name => "q", :type => "text"}/
        #main
          #main_top
            #banner_area
              %img{:alt => "", :src => "/images/banner01.jpg"}/
            #body_container
              #top_curve_main
                - if controller.class == PagesController
                  = yield
                - else
                  = render :partial => 'shared/sidebar'
                  = render :partial => 'shared/main'
            #bottom_curve_main
            %span.clear
          = render :partial => 'shared/join'
                
        #main_bottom
        %span.clear
