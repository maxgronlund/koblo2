#whoisthis
  - if current_user == @user
    This is you
  - else
    - follow = Follow.for_users(current_user, @user).first
    - if follow.present?
      = follow.relationship_with_user(@user).titleize
      - if current_user.following?(@user)
        = link_to "Unfollow #{@user.name}", user_connection_path(:user_id => current_user.id, :id => @user.id), :method => :delete, :remote => true
      - else
        = link_to "Follow #{@user.name}", user_connections_path(:user_id => current_user.id, :id => @user.id), :method => :post, :remote => true
    - else
      = link_to "Follow #{@user.name}", user_connections_path(:user_id => current_user.id, :id => @user.id), :method => :post, :remote => true
