#left_container
  .profile
    %h3
      %img.png{:alt => "", :src => "/images/profile.png"}/
    .profilbillede
      %div
        .curve
      %img{:alt => "", :src => "/images/profile.jpg"}/
    - if current_user == @user
      This is you
    - else
      - follow = Follow.for_users(current_user, @user).first
      - if follow.present?
        = follow.relationship_with_user(@user).titleize
        - if current_user.following?(@user)
          = link_to "Unfollow #{@user.name}", user_connection_path(:user_id => @user.id), :method => :delete
      - else
        = link_to "Follow #{@user.name}", user_connections_path(:user_id => @user.id), :method => :post

    %h3
      = @user.name
    %p
      %strong Web
      %span
        = link_to @user.website, "http://#{@user.website}"
      %strong Record Label
      %span= @user.record_label ? @user.record_label.name : '-'
      %strong Tracks
      %span= @user.songs.count
    %p= @user.description 
    .gallery
      %h4
        Connections
        %small= @connections_count
      %ul
        - for follow in @follows
          %li
            %a{:href => "#"}
              %img{:alt => "", :src => "/images/thumbnails/thumb01.jpg"}/
      %strong
        = link_to "View all", user_connections_path(@user)
#right_container
  .tabs
    %ul
      = tab_link('Latest', '')
      = tab_link('My Tracks', '')
      = tab_link('Upload', new_user_song_path(current_user))
