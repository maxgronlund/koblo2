#left_container
  .profile
    %h3
      %img.png{:alt => "", :src => "/images/profile.png"}/
    .profilbillede
      %div
        .curve
      %img{:alt => "", :src => "/images/profile.jpg"}/
    %h3
      = @user.name
    %p
      %strong Web
      %span
        = link_to @user.website, "http://#{@user.website}"
      %strong Record Label
      %span= @user.record_label ? @user.record_label.name : '-'
      %strong Tracks
      %span= @user.songs.count
    %p= @user.description 
    .gallery
      %h4
        Connections
        %small= @connections_count
      %ul
        - for follow in @follows
          %li
            %a{:href => "#"}
              %img{:alt => "", :src => "/images/thumbnails/thumb01.jpg"}/
      %strong
        = link_to "View all", user_connections_path(@user)
#right_container
  .tabs
    %ul
      %li
        %a{:href => "#"}
          %img{:alt => "", :src => "/images/latest.gif"}/
      %li
        %a{:href => "#"}
          %img{:alt => "", :src => "/images/my_tracks.gif"}/
      %li
        = link_to image_tag('upload.gif'), new_user_song_path(current_user)
  .music_my_tracks
    .tracks_row_none
      .col01
        %small Artist
      .col02
        %small Title
      .col03
        %small Duration
      .col04
        %small Rating
      .col05
        %small Shop
      .col06
        %small Studio
    .tracks_row.up   
      %h3
        - if @user.songs.size == 0
          You haven't uploaded any tracks.
        - else
          = render @user.songs.first(9)
