- content_for :javascript_includes do
  - uri  = request.protocol
  - uri += request.host_with_port
  - uri += request.request_uri
  - unless uri =~ /\?/
    - uri += '?format=xml' 
  - else
    - uri += '&amp;format=xml'
  :javascript
    var flashvars = {};
    flashvars.url = "#{uri}";
    var params = {};
    params.menu = "false";
    params.scale = "noscale";
    var attributes = {};
    swfobject.embedSWF("MiniStudio.swf", "flashDiv", "750", "580", "10.0.0", "expressInstall.swf", flashvars, params, attributes);
