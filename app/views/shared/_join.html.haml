#join_popup_div
  .join_popup
    .top_curve_join
    .join_repeat
      .content_join
        .close
          %span
            %a{:href => "#"} join
          %small
            %a{:href => "#", :id => 'popup_close'}
              %img{:alt => "", :src => "/images/icons/close.gif"}/
        %form{:action => "/", :method => 'post'}
          %input{:type => "hidden", :name => "authenticity_token", :value => form_authenticity_token }
          %fieldset
            .left_sec
              .pic
                %img{:alt => "", :src => "/images/thumbnails/thumb30.jpg"}/
                %span
                  %a{:href => "#"} Upload picture
              .notice
                %span Notice:
                %ul
                  %li Png and jpg files only
                  %li Size (w)200 x (h)160 px
                  %li Use RGB color mode
            .right_sec
              .form_row
                %label Name
                .input_bg
                  %input{:name => "name", :type => "text"}/
              .form_row
                %label E-mail
                .input_bg
                  %input{:name => "email", :type => "text"}/
              .form_row
                %label Password
                .input_bg
                  %input{:name => "password", :type => "text"}/
              .check_sec
                .form_row01
                  %img.check_box{:alt => "", :src => "/images/icons/check_box_arrow.gif"}/
                  %span Mucisian
                .form_row01
                  %img.check_box{:alt => "", :src => "/images/icons/check_box.gif"}/
                  %span DJ
                .form_row01
                  %img.check_box{:alt => "", :src => "/images/icons/check_box.gif"}/
                  %span Producer
                .form_row01
                  %img.check_box{:alt => "", :src => "/images/icons/check_box.gif"}/
                  %span Wannabee
                .form_row01
                  %img.check_box{:alt => "", :src => "/images/icons/check_box.gif"}/
                  %span Recordlabel
                .form_row01
                  %input{:type => 'hidden', :name => 'record_label_id', :value => '', :id => 'record_label_id'}
                  %label I&rsquo;m signed at
                  .select_bg
                    %span#flexbox_results Record Label
                    %small
                      %a#flex_button{:href => "javascript:void(0);"}
                    %div{:style => "display:block;"}
                      #deviceList.drop
                        .top_c_drop
                        .repeat
                          .repeat_x
                            %ul
                              - for record_label in RecordLabel.all do 
                                %li
                                  %a{:href => "javascript:$('#record_label_id').attr('value', #{record_label.id});"} 
                                    = record_label.name
                        .bottom_c_drop
                  %input.next_btn{:name => "", :type => "submit", :value => ""}/
    .bottom_curve_join
    %span.clear
