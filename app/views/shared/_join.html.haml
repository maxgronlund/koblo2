#join_popup_div
  %ul{:style => 'display:none'}
    %li
      %a{:href => '#step1'} Step 1
    %li
      %a{:href => '#step2'} Step 2
    %li
      %a{:href => '#step3'} Step 3
    %li
      %a{:href => '#login'} Login
  #signup_steps
    = form_for User.new, :html => { :multipart => true } do |f|
      #step1.join_popup
        .top_curve_join
        .join_repeat
          .content_join
            .close
              %h1 Join
              %small
                %a{:href => "#", :class => 'popup_close'}
                  %img{:alt => "", :src => "/images/icons/close.gif"}/
              %span.clear
              #left_180
                %img{:alt => "", :border => "0", :height => "160", :src => "/images/profile.png", :width => "160", :class => 'profile_picture'}/
                %h2 Upload picture
                = f.file_field :picture
              
              #right_200
                .inputfields
                  %label Name:
                  %input{:name => "user[name]", :size => "19", :type => "text", :id => 'user_name'}/
                .inputfields
                  %label Email:
                  %input{:name => "user[email]", :size => "19", :type => "text"}/
                .inputfields
                  %label Password:
                  %input{:name => "user[password]", :size => "19", :type => "password", :id => 'user_password'}/
                .divider

                %input{:type => 'hidden', :name => 'user[user_type_id]', :value => '', :id => 'user_type_id'}
                - for user_type in UserType.all do
                  .checkfields
                    %img.check_box.user_type_check_box{:alt => "", :src => "/images/icons/check_box.gif", :id => user_type.id}/
                    %span.usertype= user_type.name
                .divider

                .inputfields
                  %input{:type => 'hidden', :name => 'user[record_label_id]', :value => '', :id => 'record_label_id'}
                  %label#signed_at I&rsquo;m signed at
                  .select_bg
                    %span#flexbox_results Record Label
                    %small
                      %a#flex_button{:href => "javascript:void(0);"}
                    %div{:style => "display:block;"}
                      #deviceList.drop
                        .top_c_drop
                        .repeat
                          .repeat_x
                            %ul
                              - for record_label in RecordLabel.all do 
                                %li
                                  %a{:href => "javascript:void($('#record_label_id').attr('value', #{record_label.id}));;"} 
                                    = record_label.name
                        .bottom_c_drop
                
                %input.next_btn{:name => "", :id => 'step_1_next_button', :type => "button", :value => "", :width => '77', :align => 'right'}
            
        .bottom_curve_join
        %span.clear


      #step2.join_popup
        .top_curve_join
        .join_repeat
          .content_join
            .close
              %h1 Join
              %small
                %a{:href => "#", :class => 'popup_close'}
                  %img{:alt => "", :src => "/images/icons/close.gif"}/
              %span.clear
              #left_180
                %img{:alt => "", :border => "0", :height => "160", :src => "/images/profile.png", :width => "160", :class => 'profile_picture'}/
                %h2 Want to buy tracks?
                .uploadfield
                  %img.check_box{:alt => "", :src => "/images/icons/check_box_arrow.gif"}/
                  %span.usertype Yes, I want to buy
                %h2 Choose payment method
                .checkfields2
                  %img.check_box{:alt => "", :src => "/images/icons/check_box.gif"}/
                  %span.usertype PayPal 
                %span.clear
                .checkfields2
                  %img.check_box{:alt => "", :src => "/images/icons/check_box.gif"}/
                  %span.usertype Visa/MasterCard
              #right_200
                .inputfields
                  %h3.user_name
                .inputfields
                  %label About me:
                .inputfields
                  %textarea{:cols => "25", :name => "user[description]", :rows => "5"}
                .divider
                .inputfields
                  %label Website:
                  %input{:name => "user[website]", :size => "19", :type => "text"}/
                .divider
                .next
                  %input.next_btn{:name => "", :type => "button", :value => "", :id => 'step_2_next_button'}/
                  %input.back_btn{:name => "", :type => "button", :value => "", :id => 'step_2_back_button'}/
            
        .bottom_curve_join
        %span.clear

      #step3.join_popup
        .top_curve_join
        .join_repeat
          .content_join
            .close
              %span
                %a{:href => "#"} join
              %small
                %a{:href => "#", :class => 'popup_close'}
                  %img{:alt => "", :src => "/images/icons/close.gif"}/
              %input{:type => "hidden", :name => "authenticity_token", :value => form_authenticity_token }
              %fieldset
                .left_sec
                  .pic
                    = image_tag('http://dummyimage.com/109x88/091417/fff.png&text=No+profile+picture')
                  .notice
                    .form_row01
                      %img.check_box{:alt => "", :src => "/images/icons/check_box.gif"}/
                      %span I would like to sell
                    
                    .form_row01
                      %img.check_box{:alt => "", :src => "/images/icons/check_box.gif"}/
                      %span I accept that koblo.com takes 50%
                    .form_row01
                      %img.check_box{:alt => "", :src => "/images/icons/check_box.gif"}/
                      %span I have the rights to all the material I publish
                    .form_row01
                      %img.check_box{:alt => "", :src => "/images/icons/check_box.gif"}/
                      %span I will KODA myself

                    .form_row01
                      %img.check_box{:alt => "", :src => "/images/icons/check_box.gif"}/
                      %span Show my tracks on Facebook
                      %img{:src => "/images/facebook_32.png", :class => 'web20'}
                    .form_row01
                      %img.check_box{:alt => "", :src => "/images/icons/check_box.gif"}/
                      %span Tweet my tracks on Twitter
                      %img{:src => "/images/twitter_32.png", :class => 'web20'}
                    .form_row01
                      %img.check_box{:alt => "", :src => "/images/icons/check_box.gif"}/
                      %span Share my tracks on MySpace
                      %img{:src => "/images/myspace_32.png", :class => 'web20'}
                .right_sec
                  %h2
                    %strong Cheryl Cole
                  %input.finish_btn{:name => "", :type => "submit", :value => ""}/
                  %input.back_btn{:name => "", :type => "button", :value => "", :id => 'step_3_back_button'}/

        .bottom_curve_join
        %span.clear

  #login.join_popup
    .top_curve_join
    .join_repeat
      .content_join
        .close
          %h1 Login
          %small
            %a{:href => "#", :class => 'popup_close'}
              %img{:alt => "", :src => "/images/icons/close.gif"}/
          %span.clear
          #right_200
            %form{:action => user_session_path, :method => 'post', :id => 'login_form'}
              %input{:type => "hidden", :name => "authenticity_token", :value => form_authenticity_token }
              .inputfields
                %label Email:
                %input{:name => "user[email]", :size => "14", :type => "text"}/
              .inputfields
                %label Password:
                %input{:name => "user[password]", :size => "14", :type => "password"}/
              .inputfields
                %img.floatleft.popup_close{:alt => "", :border => "0", :height => "23", :src => "/images/cancel_btn.png", :width => "77"}/
                %input.floatright#login_btn{:type => 'image', :alt => "", :border => "0", :height => "23", :src => "/images/login_btn.png", :width => "77"}/
              .inputfields
                %input.nofloat{:name => "checkboxName", :type => "checkbox", :value => "checkboxValue"}/
                %label.nofloat Remember me
            .divider
            .inputfields
              Not registered?
              = link_to 'Sign up', new_user_registration_path, :id => 'sign_up_link'
              %p
                = link_to 'Forgot password?', new_user_password_path
    .bottom_curve_join
    %span.clear

- content_for :document_ready do
  - session_key_name = '_koblo2_session'
  $('#user_picture').uploadify({
  uploader      : '/javascripts/uploadify/uploadify.swf',
  script        : '#{pictures_path}',
  fileDataName  : $('#user_picture').name, 
  buttonImg     : '/images/upload_btn.png',
  wmode         : 'transparent',
  fileDataName  : 'picture[picture]',
  auto          : true,
  multi         : false,
  cancelImg     : '/images/cancel.png',
  onProgress    : function(event, queueID, fileObj, data) { return false },
  onComplete    : function(event, queueID, fileObj, response, data) { eval(response); return false },
  scriptData    : {
  'format': 'js', 
  '#{session_key_name}' : encodeURIComponent('#{u cookies[session_key_name]}'),
  'authenticity_token'  : encodeURIComponent('#{u form_authenticity_token}') 
  },
  });
